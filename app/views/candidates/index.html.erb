<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Desired position</th>
      <th>Current company</th>
      <th>Linked in url</th>
      <th>Twitter url</th>
      <th>Git hub url</th>
      <th>Portfolio url</th>
      <th>Website url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.user_id %></td>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.desired_position %></td>
        <td><%= candidate.current_company %></td>
        <td><%= candidate.linked_in_url %></td>
        <td><%= candidate.twitter_url %></td>
        <td><%= candidate.git_hub_url %></td>
        <td><%= candidate.portfolio_url %></td>
        <td><%= candidate.website_url %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path %>
