<%= form_for(candidate, multipart: true)   do |f| %>
  <% if candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
      <% candidate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.phone_field :phone %>
  </div>

  <div class="field">
    <%= f.label :desired_position %>
    <%= f.text_field :desired_position %>
  </div>

  <div class="field">
    <%= f.label :current_company %>
    <%= f.text_field :current_company %>
  </div>

  <div class="field">
    <%= f.label :linked_in_url %>
    <%= f.url_field :linked_in_url %>
  </div>

  <div class="field">
    <%= f.label :twitter_url %>
    <%= f.url_field :twitter_url %>
  </div>

  <div class="field">
    <%= f.label :git_hub_url %>
    <%= f.url_field :git_hub_url %>
  </div>

  <div class="field">
    <%= f.label :portfolio_url %>
    <%= f.url_field :portfolio_url %>
  </div>

  <div class="field">
    <%= f.label :website_url %>
    <%= f.url_field :website_url %>
  </div>

  <%= f.fields_for :resume do |r| %>
    <div class="field">
      <%= r.label :resume_data %>
      <%= r.file_field :resume_data %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
