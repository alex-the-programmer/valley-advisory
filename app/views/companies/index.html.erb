<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Cloudbase url</th>
      <th>Linkedin url</th>
      <th>Glassdoors url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address_id %></td>
        <td><%= company.cloudbase_url %></td>
        <td><%= company.linkedin_url %></td>
        <td><%= company.glassdoors_url %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless @companies.any? %>
    <p>There's no companies yet</p>
<% end %>

