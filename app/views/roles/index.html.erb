<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Hiring manager</th>
      <th>Name</th>
      <th>Description</th>
      <th>Min rate</th>
      <th>Max</th>
      <th>Employment time</th>
      <th>Employment type</th>
      <th>Travel type</th>
      <th>Sponsors visa</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.company_id %></td>
        <td><%= role.hiring_manager_id %></td>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= role.min_rate %></td>
        <td><%= role.max %></td>
        <td><%= role.employment_time %></td>
        <td><%= role.employment_type %></td>
        <td><%= role.travel_type %></td>
        <td><%= role.sponsors_visa %></td>
        <td><%= role.city %></td>
        <td><%= role.state %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

