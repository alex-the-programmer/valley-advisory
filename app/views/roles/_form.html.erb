<%= form_for([company, role]) do |f| %>
  <% if role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :company_id %>

  <div class="field">
    <%= f.label :hiring_manager_id %>
    <%= f.collection_select :hiring_manager_id, company.hiring_managers, :id, ->(m) { "#{m.user.first_name} #{m.user.last_name}" }, prompt: 'Select a hiring manager' %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :min_rate %>
    <%= f.number_field :min_rate %>
  </div>

  <div class="field">
    <%= f.label :max_rate %>
    <%= f.number_field :max_rate %>
  </div>

  <div class="field">
    <%= f.label :employment_time %>
    <%= f.select :employment_time, ['Full Time', 'Part Time'] %>
  </div>

  <div class="field">
    <%= f.label :employment_type %>
    <%= f.select :employment_type, %w(Permanent Contract) %>
  </div>

  <div class="field">
    <%= f.label :contract_duration_in_months %>
    <%= f.number_field :contract_duration_in_months %>
  </div>

  <div class="field">
    <%= f.label :travel_type %>
    <%= f.select :travel_type, ['No Travel', '25% Travel', '50% Travel', 'More than 50% Travel'] %>
  </div>

  <div class="field">
    <%= f.label :sponsors_visa %>
    <%= f.check_box :sponsors_visa %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
